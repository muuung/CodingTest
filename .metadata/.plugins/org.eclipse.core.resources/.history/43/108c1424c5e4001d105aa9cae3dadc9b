package step1;

public class P12928 {
	public int solution(int n) throws Exception {
	    int answer = 0;
	    int div = 0;
	    
	    if(n>=0 && n<=3000) {
	        for(int i = 1; i <= Math.sqrt(n); i++) {
	            if(n%i == 0) {
	            	if(i != Math.sqrt(n)) {div = n/i;}
	                answer += i + div;
	                div = 0;
	            }
	        }
	    } else { throw new Exception("0 ~ 3000 사이의 값만 입력해주세요.");}
	    
	    return answer;
}