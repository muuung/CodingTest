//                	}
//            	}
//            }
//        } else {throw new Exception("삼각형의 높이는 1 이상 500 이하입니다.");}
        
        if(triangle.length >= 1 && triangle.length <= 500) {
        	int num = 0;
            
            for(int i = 0; i < triangle.length; i++) {
            	for(int j = 0; j < triangle[i].length-1; j++) {
            		if()
            		
            		if(i == 0 && j == 0) {break;}
            		
            		num = triangle[i-1][j] + triangle[i][j];
            		if(num > triangle[i][j]) {triangle[i][j] = num;}

            		num = triangle[i-1][j] + triangle[i][j+1];
            		if(num > triangle[i][j+1]) {triangle[i][j+1] = num;}
            		
                	if(i == triangle.length-1 && j == triangle[i].length-2) {
                		Arrays.sort(triangle[i]);
                		answer = triangle[i][j+1];
                	}
            	}
            }
        } else {throw new Exception("삼각형의 높이는 1 이상 500 이하입니다.");}
        
		return answer;
    }
}