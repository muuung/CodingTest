package step1;

/* 평균 구하기 (통과) */
public class P12944 {
	public double solution(int[] arr) throws Exception {
        double answer = 0;
        
        if(arr.length >= 1 && arr.length <= 100){
            for(int i : arr) {
                if(i >= -10000 && i <= 10000) {
                    answer += i;   
                } else {
                    answer = 0;
                    throw new Exception("안대!!");
                }
            }
            
            answer /= arr.length;
            
        } else {throw new Exception("안대!!");}
        
        return answer;
    }
}